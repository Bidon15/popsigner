templ HeroStat(icon, value, label string) {
	<div class="text-center p-4 rounded-xl bg-terminal-card/50 border border-terminal-border hover:border-purple-500/30 transition-colors group">
		<div class="text-2xl mb-2 group-hover:scale-110 transition-transform">{ icon }</div>
		<div class="text-lg sm:text-xl font-display font-bold text-terminal-text">{ value }</div>
		<div class="text-xs text-terminal-muted mt-1">{ label }</div>
	</div>
}
